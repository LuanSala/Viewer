<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:id="@+id/switchBar_text"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/switchbar_margin_start"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="?android:attr/textColorPrimaryInverse"
        android:textAppearance="@style/TextAppearance.SwitchBar"
        android:textAlignment="viewStart"
        android:text="@string/disabled" />

    <Switch
        android:id="@+id/switchBar_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/switchBar_text"
        android:layout_marginEnd="@dimen/switchbar_margin_end"
        android:background="@null" />

</merge>