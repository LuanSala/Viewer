<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/holo_blue_dark</item>
        <item name="android:colorEdgeEffect">@android:color/darker_gray</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ViewerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/holo_blue_dark</item>
        <item name="android:colorEdgeEffect">#dddddd</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:hardwareAccelerated">true</item>
    </style>

</resources>

